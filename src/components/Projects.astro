---
import GitHub from "./icons/GitHub.astro"
import NextJS from "./icons/NextJS.astro"
import Tailwind from "./icons/Tailwind.astro"
import PHP from "./icons/PHP.astro"
import MySQL from "./icons/MySQL.astro"
import Bootstrap from "./icons/Bootstrap.astro"
import VisualBasic from "./icons/VisualBasic.astro"
import MicrosoftSQLServer from "./icons/MicrosoftSQLServer.astro"
import CSHARP from "./icons/CSHARP.astro"
import DevExpress from "./icons/DevExpress.astro"
import Link from "./icons/Link.astro"
import LinkButton from "./LinkButton.astro"

const TAGS = {
  NEXT: {
    name: "Next.js",
    class: "bg-black text-white",
    icon: NextJS,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
    icon: Tailwind,
  },
  PHP: {
    name: "PHP",
    class: "bg-[#003159] text-white",
    icon: PHP,
  },
  MYSQL: {
    name: "MySQL",
    class: "bg-[#003159] text-white",
    icon: MySQL,
  },
  BOOTSTRAP: {
    name: "Bootstrap",
    class: "bg-[#003159] text-white",
    icon: Bootstrap,
  },
  VISUALBASIC: {
    name: "VisualBasic",
    class: "bg-[#003159] text-white",
    icon: VisualBasic,
  },
  MICROSOFTSQLSERVER: {
    name: "MicrosoftSQLServer",
    class: "bg-[#003159] text-white",
    icon: MicrosoftSQLServer,
  },
  CSHARP: {
    name: "CSHARP",
    class: "bg-[#003159] text-white",
    icon: CSHARP,
  },
  DEVEXPRESS: {
    name: "DevExpress",
    class: "bg-[#003159] text-white",
    icon: DevExpress,
  },
}
const PROJECTS = [
{
    title: "SistemaVenta",
    description:
      "Un sistema de gestión de ventas desarrollado en C# y Microsoft SQL Server. Incluye funcionalidades para la administración de inventarios, clientes, y facturación, con una interfaz amigable y optimizada para el manejo de grandes volúmenes de datos. Ideal para pequeñas y medianas empresas que buscan automatizar sus procesos de ventas.",
    //link: "https://svgl.vercel.app/",
    github: "https://github.com/RenatoSolis/SistemaVenta",
    image: "/projects/SistemaVenta.webp",
    tags: [TAGS.CSHARP, TAGS.MICROSOFTSQLSERVER],
  },
  {
    title: "frmPatrocinadores",
    description:
      "Aplicación CRUD para la gestión de patrocinadores, creada con Visual Basic y Microsoft SQL Server. Permite registrar, modificar, eliminar y consultar información de patrocinadores de manera eficiente. Se integra perfectamente con bases de datos SQL para almacenar y organizar toda la información relevante de manera segura.",
    //link: "https://svgl.vercel.app/",
    github: "https://github.com/RenatoSolis/frmPatrocinadores-CRUD",
    image: "/projects/frmPatrocinadores.webp",
    tags: [TAGS.VISUALBASIC, TAGS.MICROSOFTSQLSERVER, TAGS.DEVEXPRESS],
  },
  {
    title: "Gestor Empleados",
    description:
      "Plataforma para la gestión de empleados desarrollada en PHP y MySQL, utilizando Bootstrap para el diseño de la interfaz. Ofrece funcionalidades CRUD completas para la administración de empleados, con un diseño responsivo que asegura una experiencia de usuario fluida en cualquier dispositivo. Ideal para empresas que requieren un sistema de gestión de recursos humanos accesible y eficiente.",
    github: "https://github.com/RenatoSolis/CRUD-Empleados-PHP-MYSQL",
    image: "/projects/CRUD-Empleados.webp",
    tags: [TAGS.PHP, TAGS.MYSQL, TAGS.BOOTSTRAP],
  },
]
---

<div class="flex flex-col gap-y-16">
  {
    //PROJECTS.map(({ image, title, description, tags, link, github }) => (
    PROJECTS.map(({ image, title, description, tags, github }) => (
    <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
  <div class="w-full md:w-1/2">
    <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
      <img alt="Proyectos" class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105" loading="lazy" src={image} />
    </div>
  </div>

  <div class="w-full md:w-1/2 md:max-w-lg">
    <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
      {title}
    </h3>
    <div class="flex flex-wrap mt-2">
      <ul class="flex flex-row mb-2 gap-x-2">
          {tags.map((tag) => (
            <li>
              <span
                class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
              >
                <tag.icon class="size-4" />
                {tag.name}
              </span>
            </li>
          ))}
        </ul>

      <div class="mt-2 text-gray-700 dark:text-gray-400">{description}</div>
      <footer class="flex items-end justify-start mt-4 gap-x-4">
          {github && (
            <LinkButton href={github}>
              <GitHub class="size-6" />
              Code
              
            </LinkButton>
          )}
          {/* {link && (
            <LinkButton href={link}>
              <Link class="size-4" />
              Preview
            </LinkButton>
          )} */}
        </footer>
    </div>
  </div>
</article>
    ))
  }
</div>
